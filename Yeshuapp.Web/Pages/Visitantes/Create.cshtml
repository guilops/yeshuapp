@page
@model CreateModel
@{
    Layout = "_LayoutLogin";
    ViewData["Title"] = "Visitante";
}
<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="utf-8" />
    <title>Login</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background-color: #f4f4f9;
            font-family: serif;
        }

        .login-container {
            background-color: #ffffff;
            border-radius: 8px;
            padding: 24px;
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.08);
            max-width: 420px;
            margin: 20px auto 0 auto;
            transform: translateY(-8px);
        }

        .form-label {
            font-size: 1rem;
            color: #555;
        }

        .form-control {
            border-radius: 4px;
        }

        .btn-primary {
            background-color: #007bff;
            border: none;
            border-radius: 4px;
            padding: 10px;
            width: 100%;
        }

            .btn-primary:hover {
                background-color: #0056b3;
            }

        h2 {
            text-align: center;
            font-size: 2rem;
            margin-bottom: 30px;
            color: #333;
        }
    </style>
</head>
<body>

<link rel="stylesheet" href="~/css/site.css" />
<div class="container">
    <h3>Olá visitante, que tal deixar sua visita registrada? </h1>
    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="card">@Model.ErrorMessage</div>
    }
    <form method="post">
        @Html.AntiForgeryToken()
        <div class="form-group">
            <div class="mb-3">
                <label asp-for="VisitanteDto.Name" class="form-label">Nome</label>
                <input asp-for="VisitanteDto.Name" class="form-control" required minlength="2" maxlength="120" />
                <span asp-validation-for="VisitanteDto.Name" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="VisitanteDto.Email" class="form-label">E-mail (opcional)</label>
                <input asp-for="VisitanteDto.Email" class="form-control" type="email" />
                <span asp-validation-for="VisitanteDto.Email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="VisitanteDto.Phone" class="form-label">Telefone (opcional)</label>
                <input asp-for="VisitanteDto.Phone" class="form-control" />
                <span asp-validation-for="VisitanteDto.Phone" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="VisitanteDto.Notes" class="form-label">Observações (opcional)</label>
                <textarea asp-for="VisitanteDto.Notes" class="form-control" rows="4" maxlength="1000"></textarea>
                <span asp-validation-for="VisitanteDto.Notes" class="text-danger"></span>
            </div>

            <div class="mb-3 form-check">
                <input asp-for="VisitanteDto.WantsContact" class="form-check-input" type="checkbox" />
                <label asp-for="VisitanteDto.WantsContact" class="form-check-label">Desejo ser contatado por um irmão para receber mais informações sobre a igreja e eventos</label>
                <span asp-validation-for="VisitanteDto.WantsContact" class="text-danger"></span>
            </div>
        

        <div class="text-center">
                <button class="btn btn-primary" type="submit">Enviar</button>
                <br>
                <br>
                <a asp-page="/Login" class="btn btn-outline-primary">Voltar</a>
        </div>

        </div>

    </form>
</div>

</body>
</html>