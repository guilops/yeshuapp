<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Yeshuapp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="https://fonts.googleapis.com/css2?family=Cinzel:wght@400&display=swap" rel="stylesheet">
    <style>
        body {
            background-color: #f8f8f0; /* Tom creme claro e suave */
            font-family: 'Arial', sans-serif; /* Fonte padrão */
            margin: 0; /* Remove a margem padrão do body */
            padding: 20px; /* Adiciona padding no body */
        }

        .navbar {
            background-color: #f8f8f0; /* A mesma cor de fundo do body */
        }

        footer.footer {
            background-color: #f8f8f0; /* A mesma cor de fundo do footer */
            padding: 0.2rem 0; /* Reduzindo o padding para tornar o footer mais curto */
            font-size: 0.8rem; /* Ajustando o tamanho da fonte, se necessário */
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light border-bottom box-shadow mb-3">
            <div class="container-fluid px-3">
                <a class="navbar-brand" asp-area="" asp-page="/Home">
                    <img src="~/logo3.png" style="max-width: 100px; height: auto;" alt="Logo" />
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Irmaos/Index">Irmãos</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Pedidos/Index">Pedidos em aberto</a>
                        </li>
                        <li class="nav-item"></li>
                            <a class="nav-link" asp-area="" asp-page="/Despesas/Index">Despesas</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Produtos/Index">Cantina</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Eventos/Index">Eventos</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/FluxoCaixa/Index">Fluxo de Caixa</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Logout">Sair</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid px-3">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="border-top footer text-muted mt-auto py-3">
        <div class="container-fluid px-3">
            &copy; @DateTime.Now.Year - Todos os direitos reservados - Casa de Oração Yeshua
          @*   <div class="map-container">
                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3659.8644553803338!2d-46.698860225393716!3d-23.465353258070586!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x94cef991c4f21c13%3A0x84dcf328fa775dde!2sR.%20Francisco%20Cristiano%20de%20Assis%2C%20159%20-%20Brasil%C3%A2ndia%2C%20S%C3%A3o%20Paulo%20-%20SP%2C%2002846-030!5e0!3m2!1spt-BR!2sbr!4v1730477828221!5m2!1spt-BR!2sbr" width="300" height="300" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
            </div> *@
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
