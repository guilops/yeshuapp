@page
@model IndexModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "Cantina";
}

<div class="container-fluid px-3">
    <h2 class="display-6 text-center" style="font-family: 'Cinzel', serif;">@ViewData["Title"]</h2>
    <a asp-page="Create" class="btn mb-2" style="background-color: rgb(10, 155, 245); color: white; border: none; padding: 8px 16px; border-radius: 5px; font-size: 1rem; text-decoration: none; display: block; transition: background-color 0.3s;">Novo Produto</a>
    <hr />
    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>&nbsp;</th>
                    <th>Descrição</th>
                    <th>Quantidade Estoque</th>
                    <th>Valor</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Produtos != null && Model.Produtos.Any())
                {
                    foreach (var produto in Model.Produtos)
                    {
                        <tr>
                            <td>
                                @if (!string.IsNullOrEmpty(produto.Imagem))
                                {
                                    <img src="data:image/png;base64,@produto.Imagem" alt="Imagem do Produto" style="width:50px; height:auto;" />
                                }
                                &nbsp;
                            </td>
                            <td>@produto.Nome</td>
                            <td>@produto.Quantidade</td>
                            <td>@produto.Valor.ToString("C", new System.Globalization.CultureInfo("pt-BR"))</td>
                            <td class="d-grid gap-2">
                                <a asp-page="Edit" asp-route-id="@produto.Id" class="btn btn-primary btn-sm mb-1">Editar</a>
                                <a asp-page="Delete" asp-route-id="@produto.Id" class="btn btn-danger btn-sm">Excluir</a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="5" class="text-center">Nenhum produto cadastrado.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
