@page
@model Yeshuapp.Web.Pages.Eventos.IndexDeslogadoModel
@{
    Layout = "_LayoutLogin";
    ViewData["Title"] = "Próximos Eventos";
}

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="utf-8" />
    <title>Login</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background-color: #f4f4f9;
            font-family: serif;
        }

        .login-container {
            background-color: #ffffff;
            border-radius: 8px;
            padding: 24px;
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.08);
            max-width: 420px;
            margin: 20px auto 0 auto;
            transform: translateY(-8px);
        }

        .form-label {
            font-size: 1rem;
            color: #555;
        }

        .form-control {
            border-radius: 4px;
        }

        .btn-primary {
            background-color: #007bff;
            border: none;
            border-radius: 4px;
            padding: 10px;
            width: 100%;
        }

            .btn-primary:hover {
                background-color: #0056b3;
            }

        h2 {
            text-align: center;
            font-size: 2rem;
            margin-bottom: 30px;
            color: #333;
        }
    </style>
</head>
<body>

<h2 class="display-6" style="text-align:center; font-family: 'Cinzel', serif;">@ViewData["Title"]</h2>
<hr />
<div class="mt-4">
    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>Descrição</th>
                <th>Data</th>
                <th>Hora</th>
                <th>Detalhes</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Eventos != null && Model.Eventos.Any())
            {
                foreach (var evento in Model.Eventos)
                {
                    <tr>
                        <td>@evento.Descricao</td>
                        <td>@Convert.ToDateTime(evento.Data).ToString("dd/MM/yyyy")</td>
                        <td>@evento.Horario</td>
                        <td>@evento.Detalhes</td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="5" class="text-center">Em breve teremos novos eventos.</td>
                </tr>
            }
        </tbody>
    </table>

    <div class="text-center">
        <a asp-page="/Login" class="btn btn-outline-primary">Voltar</a>
    </div>
</div>

</body>
</html>