@page
@model CreateModel
@{
    Layout = "_LayoutLogin";
    ViewData["Title"] = "Pedido de Oração";
}

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="utf-8" />
    <title>Login</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background-color: #f4f4f9;
            font-family: serif;
        }

        .login-container {
            background-color: #ffffff;
            border-radius: 8px;
            padding: 24px;
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.08);
            max-width: 420px;
            margin: 20px auto 0 auto;
            transform: translateY(-8px);
        }

        .form-label {
            font-size: 1rem;
            color: #555;
        }

        .form-control {
            border-radius: 4px;
        }

        .btn-primary {
            background-color: #007bff;
            border: none;
            border-radius: 4px;
            padding: 10px;
            width: 100%;
        }

            .btn-primary:hover {
                background-color: #0056b3;
            }

        h2 {
            text-align: center;
            font-size: 2rem;
            margin-bottom: 30px;
            color: #333;
        }
    </style>
</head>

<body>
    <link rel="stylesheet" href="~/css/site.css" />
    <div class="container">
        <h3>Pedido de Oração (Anônimo)</h3>
        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="alert alert-danger" role="alert">
                @Model.ErrorMessage
            </div>
        }
        <form method="post">
            @Html.AntiForgeryToken()
            <div class="form-group mb-4">
                <label asp-for="PedidoOracaoDto.Mensagem" class="mb-2">Mensagem</label>
                <textarea asp-for="PedidoOracaoDto.Mensagem" class="form-control" rows="5" placeholder="Digite seu pedido de oração..."></textarea>
                <span asp-validation-for="PedidoOracaoDto.Mensagem" class="text-danger"></span>
                <br />
            </div>
            <div class="text-center">
                <button type="submit" class="btn btn-outline-primary" onclick="btnAlerta()">Salvar</button>
                <br>
                <br>
                <a asp-page="/Login" class="btn btn-outline-primary">Voltar</a>
            </div>
        </form>
    </div>

    <script lang="javascript">
        function btnAlerta() {
            alert("Obrigado por enviar seu pedido de oração, ele é totalmente anônimo. Deus te abençoe!");
        }
    </script>

    </div>

</body>
</html>