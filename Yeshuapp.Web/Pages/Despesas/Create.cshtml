@page
@model CreateModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "Nova Despesa";
}

<!DOCTYPE html>
<html lang="pt-BR">
<body>
    <div class="container">
        <h2 class="mb-2 text-center" style="font-family: 'Dancing Script', cursive; font-size: 1.5rem; color: #4A4A4A;">@ViewData["Title"]</h2>

        <form method="post" id="createForm" enctype="multipart/form-data" asp-action="Create">
            <div class="mt-4">
                <div class="form-group">
                    <label asp-for="Despesas.Descricao"></label>
                    <input asp-for="Despesas.Descricao" class="form-control" />
                    <span asp-validation-for="Despesas.Descricao" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Despesas.Data"></label>
                    <input asp-for="Despesas.Data" class="form-control" id="data"
                           type="date"
                           required />
                    <span asp-validation-for="Despesas.Data" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Despesas.Valor"></label>
                    <input asp-for="Despesas.Valor" class="form-control" type="number" step="0.01" min="0" />
                    <span asp-validation-for="Despesas.Valor" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Despesas.Detalhes"></label>
                    <input asp-for="Despesas.Detalhes" class="form-control" />
                    <span asp-validation-for="Despesas.Detalhes" class="text-danger"></span>
                </div>                
                <div class="form-group"></div>
                    <label>Anexo</label>
                    <input type="file" name="imagemFile" accept=".jpg,.png,.pdf" class="form-control" onchange="previewImage(event)" />
                    <span asp-validation-for="Despesas.Anexo" class="text-danger"></span>
                    @if (!string.IsNullOrEmpty(Model.Despesas.Anexo))
                    {
                        <img src="data:image/png;base64,@Model.Despesas.Anexo" alt="Anexo" style="width:100px; height:auto; margin-top:10px;" />
                    }
                </div>
                <br />
                <div class="text-center">
                    <button type="submit" class="btn btn-primary">Salvar</button>
                    <a asp-page="/Despesas/Index" class="btn btn-outline-primary">Voltar</a>
                </div>
        </form>
    </div>
        
    <script>

        function previewImage(event) 
        {
            const imagePreview = document.getElementById('imagePreview');
            imagePreview.src = URL.createObjectURL(event.target.files[0]);
            imagePreview.style.display = 'block';
        }

    </script>        

</body>
</html>



